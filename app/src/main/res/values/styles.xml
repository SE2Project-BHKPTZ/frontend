<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headline">
        <item name="android:textSize">80sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="EditTextView">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:backgroundTint">@color/dark_navy</item>
    </style>

    <style name="textView">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="btnDefaultMainActivity">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="textOutlineColor">#ffffff</item>
    </style>

    <style name="btnPrimary" parent="btnDefaultMainActivity">
        <item name="android:backgroundTint">@color/button_background_tint</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btnPrimaryWithHat" parent="btnPrimary">
        <item name="android:drawableLeft">@drawable/witch_hat</item>
    </style>

    <style name="btnSecondary" parent="btnDefaultMainActivity">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/dark_navy</item>
    </style>

    <style name="btnSecondaryWithStaff" parent="btnSecondary">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:drawableLeft">@drawable/staff</item>
        <item name="android:textColor">@color/dark_navy</item>
    </style>

    <style name="btnGoBack">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:backgroundTint">@color/deep_purple</item>
    </style>

    <style name="slider">
        <item name="haloColor">@color/deep_purple</item>
        <item name="thumbColor">@color/primary_purple</item>
        <item name="tickColor">@color/primary_purple</item>
        <item name="trackColor">@color/light_gray</item>
    </style>

    <style name="checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/white</item>
        <item name="buttonIconTint">@color/black</item>
    </style>
</resources>
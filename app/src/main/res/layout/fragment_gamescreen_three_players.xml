<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.`GameS#creenThreePlayersFragment`">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gamescreenTriangleImageView"
            android:layout_width="102dp"
            android:layout_height="73dp"
            android:adjustViewBounds="true"
            android:rotation="-180"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/triangle" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/player1FragmentContainerView"
            android:name="at.aau.serg.fragments.CardsFragment"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/card_border_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamescreenTriangleImageView" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/player4FragmentContainerView"
            android:name="at.aau.serg.fragments.CardsFragment"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/card_border_default"
            android:rotation="-45"
            app:layout_constraintBottom_toTopOf="@+id/gamescreenTriangleImageView"
            app:layout_constraintEnd_toStartOf="@+id/player3FragmentContainerView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/player3FragmentContainerView"
            android:name="at.aau.serg.fragments.CardsFragment"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/card_border_default"
            android:rotation="45"
            app:layout_constraintBottom_toTopOf="@+id/gamescreenTriangleImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/player4FragmentContainerView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
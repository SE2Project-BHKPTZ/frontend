<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GameScreenFourPlayersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gamescreenTriangleImageView"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/four_point_star"
            android:contentDescription="@string/triangleLogo"/>

        <ImageView
            android:id="@+id/player1Card"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamescreenTriangleImageView"
            app:srcCompat="@drawable/card_border_default"
            android:contentDescription="@string/player1Card"/>

        <ImageView
            android:id="@+id/player2Card"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:rotation="-90"
            app:layout_constraintBottom_toTopOf="@+id/player1Card"
            app:layout_constraintEnd_toStartOf="@+id/gamescreenTriangleImageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/card_border_default"
            android:contentDescription="@string/player2Card"/>

        <ImageView
            android:id="@+id/player3Card"
            android:name="at.aau.serg.fragments.CardsFragment"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:rotation="0"
            app:layout_constraintBottom_toTopOf="@+id/gamescreenTriangleImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/card_border_default"
            android:contentDescription="@string/player3Card"/>

        <ImageView
            android:id="@+id/player4Card"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:rotation="90"
            app:layout_constraintBottom_toTopOf="@+id/player1Card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/gamescreenTriangleImageView"
            app:srcCompat="@drawable/card_border_default"
            android:contentDescription="@string/player4Card"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GamescreenFourPlayersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gamescreenTriangleImageView"
            android:layout_width="150dp"
            android:layout_height="115dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/viereckStern" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/player1FragmentContainerView"
            android:name="at.aau.serg.fragments.CardsFragment"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/card_border_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamescreenTriangleImageView" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/player2FragmentContainerView"
            android:name="at.aau.serg.fragments.CardsFragment"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/card_border_default"
            android:rotation="-90"
            app:layout_constraintBottom_toTopOf="@+id/player1FragmentContainerView"
            app:layout_constraintEnd_toStartOf="@+id/gamescreenTriangleImageView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/player3FragmentContainerView"
            android:name="at.aau.serg.fragments.CardsFragment"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/card_border_default"
            android:rotation="0"
            app:layout_constraintBottom_toTopOf="@+id/gamescreenTriangleImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/player4FragmentContainerView"
            android:name="at.aau.serg.fragments.CardsFragment"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/card_border_default"
            android:rotation="90"
            app:layout_constraintBottom_toTopOf="@+id/player1FragmentContainerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/gamescreenTriangleImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>